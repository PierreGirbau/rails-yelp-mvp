<div class="container">
<h1>Add a new review</h1>
<%= simple_form_for([@restaurant, @review]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :content %>
    <%= f.input :rating %>
  </div>

  <%= f.submit "Add a review", class: "btn btn-primary" %>
<% end %>
</div>
